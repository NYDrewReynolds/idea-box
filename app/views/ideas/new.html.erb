<div class="container">
  <div class="row">
    <div class="col-lg-3 col-lg-offset-5">
      <h1>Idea Box</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-2">
      <h2>Create a New Idea</h2>
      <%= render 'shared/idea_form' %>
    </div>

    <div class="col-lg-4 col-lg-offset-1">
      <h1 class="text-center">Ideas</h1>
      <ul id="ideas">
        <% @ideas.each do |idea| %>
            <li>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title"><%= idea.title %>
                  <span class="label label-primary"><%= idea.quality %></span>
                    <span class='remove-idea pull-right'><i class='fa fa-times fa-lg'></i></span>
                    </h3>
                </div>
                <div class="panel-body">
                  <%= idea.body %>
                </div>
                <div class="panel-footer">
                  <span class='upvote'><i class='fa fa-thumbs-up fa-lg'></i></span>
                  <span class='downvote pull-right'><i class='fa fa-thumbs-down fa-lg'></i></span>
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 col-md-offset-1" id="ideas"><%= render @ideas %></div>
  </div>

</div>



