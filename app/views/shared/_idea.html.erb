<div class="panel panel-default" data-id="<%= idea.id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= idea.title %>
      <span class='remove-idea pull-right'><i class='fa fa-times fa-lg'></i></span>
      <%= link_to "Edit", edit_idea_path(idea), class:'edit-link pull-right' %>
    </h3>
  </div>
  <div class="panel-body">
    <%= idea.body.truncate(100, separator: ' ') %>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-4">
        <span class='upvote'><i class='fa fa-thumbs-up fa-lg'></i></span>
      </div>
      <div class="col-md-4 text-center">
        <span class="label label-primary"><%= idea.quality %></span>
      </div>
      <div class="col-md-4">
        <span class='downvote pull-right'><i class='fa fa-thumbs-down fa-lg'></i></span>
      </div>
    </div>
  </div>
</div>
